@page
@model GlobalPaymentFraudDetection.Pages.Analytics.IndexModel
@{
    ViewData["Title"] = "Analytics & Insights";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="page-header">
                <h1>Analytics & Insights</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/Dashboard">Dashboard</a></li>
                        <li class="breadcrumb-item active">Analytics</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>

    <div class="row mb-4 g-3">
        <div class="col-lg-3 col-md-6 fade-in">
            <div class="metric-box">
                <h6><i class="bi bi-currency-dollar"></i> Total Volume</h6>
                <div class="value">$<span id="totalVolume">0</span></div>
                <small class="text-success"><i class="bi bi-arrow-up"></i> 12.5% from last week</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 fade-in" style="animation-delay: 0.1s;">
            <div class="metric-box">
                <h6><i class="bi bi-shield-x"></i> Fraud Detected</h6>
                <div class="value"><span id="fraudCount">0</span></div>
                <small class="text-danger"><i class="bi bi-arrow-up"></i> 3.2% from last week</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 fade-in" style="animation-delay: 0.2s;">
            <div class="metric-box">
                <h6><i class="bi bi-clock-history"></i> Avg Response Time</h6>
                <div class="value"><span id="avgResponseTime">245</span>ms</div>
                <small class="text-success"><i class="bi bi-arrow-down"></i> 15ms faster</small>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 fade-in" style="animation-delay: 0.3s;">
            <div class="metric-box">
                <h6><i class="bi bi-percent"></i> Detection Accuracy</h6>
                <div class="value"><span id="accuracy">98.7</span>%</div>
                <small class="text-success"><i class="bi bi-arrow-up"></i> 0.5% improvement</small>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-graph-up"></i> Transaction Volume Trends</h5>
                </div>
                <div class="card-body">
                    <canvas id="volumeTrendChart" height="80"></canvas>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-pie-chart"></i> Gateway Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="gatewayDistChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-globe"></i> Geographic Fraud Heatmap</h5>
                    <div class="btn-group btn-group-sm">
                        <button type="button" class="btn btn-outline-primary active" id="heatmapViewBtn">Heatmap</button>
                        <button type="button" class="btn btn-outline-primary" id="markersViewBtn">Markers</button>
                    </div>
                </div>
                <div class="card-body">
                    <div id="worldMap" style="height: 400px; border-radius: var(--radius-md); z-index: 1;"></div>
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="bi bi-info-circle"></i> 
                            Showing <span id="fraudPointsCount" class="fw-bold text-danger">0</span> fraudulent transactions from the last 30 days
                        </small>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-robot"></i> ML Model Performance</h5>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span><strong>Precision</strong></span>
                            <span class="text-success">96.8%</span>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar bg-success" style="width: 96.8%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span><strong>Recall</strong></span>
                            <span class="text-info">94.2%</span>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar bg-info" style="width: 94.2%"></div>
                        </div>
                    </div>
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-2">
                            <span><strong>F1 Score</strong></span>
                            <span class="text-primary">95.5%</span>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar bg-primary" style="width: 95.5%"></div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <div class="d-flex justify-content-between mb-2">
                            <span><strong>AUC-ROC</strong></span>
                            <span class="text-warning">98.1%</span>
                        </div>
                        <div class="progress" style="height: 10px;">
                            <div class="progress-bar bg-warning" style="width: 98.1%"></div>
                        </div>
                    </div>
                    <hr>
                    <div class="mt-3">
                        <p class="text-muted mb-2"><small>Last Model Update:</small></p>
                        <p class="mb-0"><strong>October 14, 2025 15:30 UTC</strong></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-list-check"></i> Top Fraud Indicators</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Indicator</th>
                                    <th>Frequency</th>
                                    <th>Impact Score</th>
                                    <th>Trend</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><i class="bi bi-geo-alt-fill text-danger"></i> Unusual Location</td>
                                    <td><span class="badge bg-danger">High (68%)</span></td>
                                    <td><strong>8.7/10</strong></td>
                                    <td><span class="text-danger"><i class="bi bi-arrow-up"></i> Increasing</span></td>
                                </tr>
                                <tr>
                                    <td><i class="bi bi-speedometer2 text-warning"></i> High Velocity</td>
                                    <td><span class="badge bg-warning">Medium (45%)</span></td>
                                    <td><strong>7.3/10</strong></td>
                                    <td><span class="text-success"><i class="bi bi-arrow-down"></i> Decreasing</span></td>
                                </tr>
                                <tr>
                                    <td><i class="bi bi-shield-x text-danger"></i> Blacklisted IP</td>
                                    <td><span class="badge bg-danger">High (52%)</span></td>
                                    <td><strong>9.2/10</strong></td>
                                    <td><span class="text-muted"><i class="bi bi-arrow-right"></i> Stable</span></td>
                                </tr>
                                <tr>
                                    <td><i class="bi bi-credit-card text-warning"></i> New Payment Method</td>
                                    <td><span class="badge bg-info">Low (23%)</span></td>
                                    <td><strong>5.8/10</strong></td>
                                    <td><span class="text-success"><i class="bi bi-arrow-down"></i> Decreasing</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script src="https://unpkg.com/leaflet.heat@0.2.0/dist/leaflet-heat.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const ctx1 = document.getElementById('volumeTrendChart').getContext('2d');
            new Chart(ctx1, {
                type: 'line',
                data: {
                    labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                    datasets: [{
                        label: 'Transaction Volume',
                        data: [1200, 1900, 1500, 2100, 1800, 2400, 2200],
                        borderColor: 'rgb(79, 70, 229)',
                        backgroundColor: 'rgba(79, 70, 229, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: true,
                    plugins: {
                        legend: {
                            display: false
                        }
                    }
                }
            });

            const ctx2 = document.getElementById('gatewayDistChart').getContext('2d');
            new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: ['Stripe', 'PayPal', 'Braintree', 'Authorize.Net'],
                    datasets: [{
                        data: [45, 30, 15, 10],
                        backgroundColor: [
                            'rgb(79, 70, 229)',
                            'rgb(14, 165, 233)',
                            'rgb(16, 185, 129)',
                            'rgb(245, 158, 11)'
                        ]
                    }]
                }
            });

            document.getElementById('totalVolume').textContent = '2.4M';
            document.getElementById('fraudCount').textContent = '342';

            // Initialize Geographic Fraud Heatmap
            initializeFraudHeatmap();
        });

        // Geographic Fraud Heatmap Implementation
        let fraudMap;
        let heatLayer;
        let markersLayer;
        let fraudData = [];
        let currentView = 'heatmap';

        async function initializeFraudHeatmap() {
            try {
                // Initialize Leaflet map
                fraudMap = L.map('worldMap', {
                    center: [20, 0],
                    zoom: 2,
                    minZoom: 2,
                    maxZoom: 18,
                    worldCopyJump: true
                });

                // Add dark theme tile layer (CartoDB Dark Matter)
                const isDarkMode = document.body.classList.contains('dark-mode');
                const tileUrl = isDarkMode 
                    ? 'https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png'
                    : 'https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png';

                L.tileLayer(tileUrl, {
                    attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
                    subdomains: 'abcd',
                    maxZoom: 19
                }).addTo(fraudMap);

                // Fetch fraud data from API
                const response = await fetch('/api/Analytics/fraud-heatmap?days=30&minFraudScore=0.5');
                const result = await response.json();

                if (result.success && result.data) {
                    fraudData = result.data;
                    document.getElementById('fraudPointsCount').textContent = fraudData.length;

                    // Create heatmap layer
                    createHeatmapLayer();

                    // Create markers layer
                    createMarkersLayer();

                    // Show heatmap by default
                    showHeatmap();
                }

                // Handle view toggle buttons
                document.getElementById('heatmapViewBtn').addEventListener('click', function() {
                    this.classList.add('active');
                    document.getElementById('markersViewBtn').classList.remove('active');
                    showHeatmap();
                });

                document.getElementById('markersViewBtn').addEventListener('click', function() {
                    this.classList.add('active');
                    document.getElementById('heatmapViewBtn').classList.remove('active');
                    showMarkers();
                });

                // Update map on dark mode toggle
                document.getElementById('darkModeToggle').addEventListener('click', function() {
                    setTimeout(() => {
                        const isDark = document.body.classList.contains('dark-mode');
                        const newTileUrl = isDark 
                            ? 'https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png'
                            : 'https://{s}.basemaps.cartocdn.com/light_all/{z}/{x}/{y}{r}.png';
                        
                        fraudMap.eachLayer(function(layer) {
                            if (layer instanceof L.TileLayer) {
                                fraudMap.removeLayer(layer);
                            }
                        });

                        L.tileLayer(newTileUrl, {
                            attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors &copy; <a href="https://carto.com/attributions">CARTO</a>',
                            subdomains: 'abcd',
                            maxZoom: 19
                        }).addTo(fraudMap);

                        if (currentView === 'heatmap' && heatLayer) {
                            heatLayer.addTo(fraudMap);
                        } else if (currentView === 'markers' && markersLayer) {
                            markersLayer.addTo(fraudMap);
                        }
                    }, 100);
                });

            } catch (error) {
                console.error('Error initializing fraud heatmap:', error);
                document.getElementById('worldMap').innerHTML = `
                    <div class="text-center p-4">
                        <i class="bi bi-exclamation-triangle text-warning" style="font-size: 3rem;"></i>
                        <p class="text-muted mt-2">Failed to load geographic data</p>
                    </div>
                `;
            }
        }

        function createHeatmapLayer() {
            // Prepare heatmap data: [lat, lng, intensity]
            const heatmapData = fraudData.map(point => [
                point.latitude,
                point.longitude,
                point.intensity || 0.5
            ]);

            heatLayer = L.heatLayer(heatmapData, {
                radius: 25,
                blur: 35,
                maxZoom: 10,
                max: 1.0,
                gradient: {
                    0.0: '#3b82f6',  // Blue (low)
                    0.3: '#22c55e',  // Green (medium-low)
                    0.5: '#eab308',  // Yellow (medium)
                    0.7: '#f97316',  // Orange (high)
                    1.0: '#ef4444'   // Red (critical)
                }
            });
        }

        function createMarkersLayer() {
            markersLayer = L.layerGroup();

            // Define custom icons for different fraud levels
            const criticalIcon = L.icon({
                iconUrl: 'data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjQiIGhlaWdodD0iMjQiIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48Y2lyY2xlIGN4PSIxMiIgY3k9IjEyIiByPSI4IiBmaWxsPSIjZWY0NDQ0Ii8+PC9zdmc+',
                iconSize: [16, 16],
                iconAnchor: [8, 8]
            });

            const highIcon = L.icon({
                iconUrl: 'data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjQiIGhlaWdodD0iMjQiIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48Y2lyY2xlIGN4PSIxMiIgY3k9IjEyIiByPSI4IiBmaWxsPSIjZjk3MzE2Ii8+PC9zdmc+',
                iconSize: [14, 14],
                iconAnchor: [7, 7]
            });

            const mediumIcon = L.icon({
                iconUrl: 'data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iMjQiIGhlaWdodD0iMjQiIHZpZXdCb3g9IjAgMCAyNCAyNCIgZmlsbD0ibm9uZSIgeG1sbnM9Imh0dHA6Ly93d3cudzMub3JnLzIwMDAvc3ZnIj48Y2lyY2xlIGN4PSIxMiIgY3k9IjEyIiByPSI4IiBmaWxsPSIjZWFiMzA4Ii8+PC9zdmc+',
                iconSize: [12, 12],
                iconAnchor: [6, 6]
            });

            fraudData.forEach(point => {
                const icon = point.fraudScore >= 0.8 ? criticalIcon : 
                            point.fraudScore >= 0.6 ? highIcon : mediumIcon;

                const marker = L.marker([point.latitude, point.longitude], { icon: icon });
                
                // Create popup with fraud details
                const popupContent = `
                    <div style="min-width: 200px;">
                        <h6 class="mb-2"><i class="bi bi-exclamation-triangle"></i> Fraud Detected</h6>
                        <p class="mb-1"><strong>Location:</strong> ${point.city}, ${point.country}</p>
                        <p class="mb-1"><strong>Amount:</strong> $${point.amount.toFixed(2)}</p>
                        <p class="mb-1"><strong>Fraud Score:</strong> <span class="badge bg-danger">${(point.fraudScore * 100).toFixed(1)}%</span></p>
                        <p class="mb-1"><strong>Transaction ID:</strong> ${point.transactionId}</p>
                        <p class="mb-0"><small class="text-muted">${new Date(point.timestamp).toLocaleString()}</small></p>
                    </div>
                `;
                
                marker.bindPopup(popupContent);
                markersLayer.addLayer(marker);
            });
        }

        function showHeatmap() {
            currentView = 'heatmap';
            if (markersLayer) fraudMap.removeLayer(markersLayer);
            if (heatLayer) heatLayer.addTo(fraudMap);
        }

        function showMarkers() {
            currentView = 'markers';
            if (heatLayer) fraudMap.removeLayer(heatLayer);
            if (markersLayer) markersLayer.addTo(fraudMap);
        }
    </script>
}
